<claw version="0.3">
  <global>
    <parameter key="transformer" value="cx2x.translator.transformer.ClawTransformer"/>
    <parameter key="default_target" value="gpu"/>
    <parameter key="default_directive" value="openacc"/>
    <parameter key="openacc_vector_length" value="128"/> <!-- vector_length(128) -->
    <parameter key="openacc_num_gangs" value="8"/>       <!-- num_gangs(8) -->
    <parameter key="openacc_num_workers" value="8"/>     <!-- num_workers(8) -->
    <parameter key="openacc_execution_mode" value="vector_gang"/>
  </global>
  <groups>
    <group type="independent" name="internal-xcodeml"    trigger="translation_unit" class="cx2x.translator.transformation.utility.XcodeMLWorkaround" />
    <group type="independent" name="remove"              trigger="directive"        class="cx2x.translator.transformation.utility.UtilityRemove" />
    <group type="independent" name="primitive"           trigger="directive"        class="cx2x.translator.transformation.openacc.DirectivePrimitive" />
    <group type="independent" name="array-transform"     trigger="directive"        class="cx2x.translator.transformation.loop.ArrayTransform" />
    <group type="independent" name="loop-extract"        trigger="directive"        class="cx2x.translator.transformation.loop.LoopExtraction" />
    <group type="independent" name="loop-hoist"          trigger="directive"        class="cx2x.translator.transformation.loop.LoopHoist" />
    <group type="dependent"   name="loop-fusion"         trigger="directive"        class="cx2x.translator.transformation.loop.LoopFusion" />
    <group type="independent" name="loop-interchange"    trigger="directive"        class="cx2x.translator.transformation.loop.LoopInterchange" />
    <group type="independent" name="on-the-fly"          trigger="directive"        class="cx2x.translator.transformation.claw.ArrayToFctCall" />
    <group type="independent" name="kcache"              trigger="directive"        class="cx2x.translator.transformation.claw.Kcaching" />
    <group type="independent" name="if-extract"          trigger="directive"        class="cx2x.translator.transformation.loop.IfExtract" />
    <group type="independent" name="parallelize"         trigger="directive"        class="cx2x.translator.transformation.claw.parallelize.Parallelize" />
    <group type="independent" name="parallelize-forward" trigger="directive"        class="cx2x.translator.transformation.claw.parallelize.ParallelizeForward" />
  </groups>
</claw>
